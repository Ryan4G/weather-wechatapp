/**index.wxss**/

.weather-pages{
  display: flex;
  width: 100%;
  white-space:nowrap;
  overflow-x: hidden;
}

.weather-page{
  display: block;
  width: 100%;
  height: 100%;
}

.weather-bg{
  position: relative;
  display: block;
  width: 100%;
  margin: 0 auto;
  color: #fff;
}

.weather-bg image{
  position: absolute;
  width: 100%;
  height: 100%;
}

.weather-bg-tempInfo{
  position: relative;
  display: block;
  padding: 0 30rpx 140rpx 30rpx;
}

.weather-bg-wetInfo{
  position: relative;
  padding: 0 30rpx 20rpx 30rpx;
}

.weather-bg-wetInfo-item{
  display: inline-block;
  width: 33%;
  text-align: center;
  border-right: 1rpx solid #fff;
}

.weather-bg-wetInfo-item:last-child{
  border-right: 0;
}

.weather-forecast{
  display: block;
  color: #666;
  background-color: #fff;
}

.weather-forecast-item{
  display: flex;
  padding: 30rpx 0;
  margin: 0 30rpx;
  border-bottom: 1rpx #b2b2b2 solid;
}

.weather-forecast-item:last-child{
  border-bottom: 0;
}

.weather-forecast-item view{
  display: flex;
  justify-content: center;
  width: 25%;
  overflow: hidden;
}

.weather-forecast-item view:nth-child(2){
  width: 50%;
  text-align: center;
}

.weather-forecast-item view:last-child{
  text-align: right;
}

.weather-forecast-item image{
  width: 50rpx;
  height: 50rpx;
}

.weather-advice{
  display: flex;
  flex-flow: row;
  justify-content: center;
  flex-wrap: wrap;
  margin: 20rpx 0;
  text-align: center;
  background-color: #fff;
}

.weather-advice-item{
  display: block;
  width: 24%;
  padding: 20rpx 0;
  border: #b2b2b2 1rpx solid; 
  border-width: 0 1rpx 1rpx 0;
}

.weather-advice-item:nth-child(4n+0){
  border-right-width: 0 ;
}

.weather-advice-item:nth-child(n+5){
  border-bottom-width: 0 ;
}

.weather-advice-img{
  width: 60rpx;
  height: 60rpx;
}

.weather-advice-text{
  display: block;
  color: #666;
}

.weather-footer{
  position: relative;
  color: #b2b2b2;
  margin: 30rpx 0 80rpx 0;
  text-align: center;
}

.footer-tabbar{
  position: fixed;
  bottom: 0;
  display: flex;
  flex-flow: row;
  justify-content: center;
  border-top: 1rpx solid #b2b2b2;
  width: 100%;
  height: 60rpx;
  padding-top: 20rpx;
  background-color: #fff;
}

.footer-tabbar-nav,
.footer-tabbar-mgr,
.footer-tabbar-set{
  width: 15%;
  text-align: center;
}

.footer-tabbar-nav{
  width: 70%;
}

.footer-tabbar-mgr image,
.footer-tabbar-set image{
  width: 24px;
  height: 24px;
}

.footer-tabbar-nav li{
  display: inline-block;
  margin: 0 10rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #999;
  border-radius: 50%;
  opacity: .5;
}

.footer-tabbar-nav li.selected{
  opacity: 1;
}